 <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
 

  <% if flash[:success] %>
    <div class="alert alert-success"><%= flash[:success] %></div>
  <% end %>
  </br>

  </br>
  </br>



  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">

      <!--All the content inside the carousel-->
      <div class="carousel-inner">
      <!--This will be the first slide that shows up on the carousel -->
          <div class="item active" style="height:300px; margin-top:10px;">
              <div class="jumbotron">
                <h1>Welcome to CurbAlert</h1>
                <p>Scroll to see free stuff in your area!</p>
              </div>
          </div>
          <!-- Here is where the loop through your database begins-->
          
           <% @craig.each do |c|%>
          <div class="item">

            <div class="img-rounded">
             <%= image_tag c["images"][0]["full"]%> 
              
               <p><strong><%=c["heading"]%></strong></br>
               <%=c["location"]["formatted_address"]%></br>
               Latitude:<%=c["location"]["lat"]%>
               Longitude:<%=c["location"]["long"]%>

               </p>
            </div>

              
            <div class="content">

              <p>
              </br>
              <%=c["body"]%>
              </p>
          
            </div>

          </div>

         <%end%>
      </div> <!-- Here is the end of the inner carousel, including that first welcome slide-->

    <!-- Controls -->
      
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>

  <script type="text/javascript">// <![CDATA[
jQuery(document).ready(function(){

  jQuery("#carousel-example-generic").touchwipe({
          wipeLeft: function() { jQuery("#carousel-example-generic").carousel('next'); },
          wipeRight: function() { jQuery("#carousel-example-generic").carousel('prev'); },
          preventDefaultEvents: false
  });
});


